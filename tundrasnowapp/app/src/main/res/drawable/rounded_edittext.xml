<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color layer, set to black -->
    <item>
        <shape>
            <solid android:color="#000000"/>  <!-- background color -->
            <corners android:radius="16dp"/>  <!-- this for roundign corners -->
        </shape>
    </item>

    <!-- border layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <stroke android:color="#D3D3D3" android:width="1dp"/>  <!-- border color -->
            <corners android:radius="16dp"/>  <!-- rounded corners -->
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section with Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/detailEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- Dates Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <!-- Start Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Date"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/detailStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Not Set"
                                android:textSize="16sp"
                                android:textColor="#E0E0E0" />
                        </LinearLayout>

                        <!-- End Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Date"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/detailEndDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Not Set"
                                android:textSize="16sp"
                                android:textColor="#E0E0E0" />
                        </LinearLayout>

                        <!-- Registration Start Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registration Start Date"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/detailRegStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Not Set"
                                android:textSize="16sp"
                                android:textColor="#E0E0E0" />
                        </LinearLayout>

                        <!-- Registration End Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registration End Date"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/detailRegEndDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Not Set"
                                android:textSize="16sp"
                                android:textColor="#E0E0E0" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Location Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOCATION"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:id="@+id/detailEventLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event Location"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#E0E0E0" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#1E1E1E">

                <TextView
                    android:id="@+id/detailEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/event_description"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:maxLines="6"
                    android:ellipsize="end"
                    android:textColor="#E0E0E0" />
            </androidx.cardview.widget.CardView>

            <!-- Image Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/eventImageCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#1E1E1E">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="POSTER IMAGE"
                    android:textColor="#9E9E9E"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/eventImageView"
                    android:layout_width="300dp"
                    android:layout_margin="5dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:contentDescription="Selected Event Image"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <!-- Status Message -->
            <TextView
                android:id="@+id/statusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="16dp"
                android:text="@string/event_status"
                android:maxWidth="300dp"
                android:textColor="#E0E0E0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Map Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1E1E1E">

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Map Coming Soon"
                        android:textColor="#9E9E9E"
                        android:textSize="16sp" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Geolocation Notice -->
            <TextView
                android:id="@+id/geoLocationNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_notice"
                android:background="#332200"
                android:padding="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FF9800"
                android:visibility="gone"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

    <!-- Button Container - Fixed at bottom -->
    <LinearLayout
        android:id="@+id/buttonBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textColor="#E0E0E0"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Right"
            android:backgroundTint="#BB86FC"
            android:textColor="#000000" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

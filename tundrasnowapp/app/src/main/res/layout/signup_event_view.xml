<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">  <!-- Dark mode background -->

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section with Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/detailEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Date Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATE"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"/>

                        <TextView
                            android:id="@+id/detailEventDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Date"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#E0E0E0" />
                    </LinearLayout>

                    <!-- Location Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOCATION"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"/>

                        <TextView
                            android:id="@+id/detailEventLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Location"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#E0E0E0" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#1E1E1E">

                <TextView
                    android:id="@+id/detailEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/event_description"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:maxLines="6"
                    android:ellipsize="end"
                    android:textColor="#E0E0E0" />
            </androidx.cardview.widget.CardView>

            <!-- Map Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1E1E1E">

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Map Coming Soon"
                        android:textColor="#9E9E9E"
                        android:textSize="16sp"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Geolocation Notice -->
            <TextView
                android:id="@+id/geoLocationNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice: Event Signup Requires Geolocation!"
                android:background="#332200"
                android:padding="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FF9800"
                android:visibility="gone"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

    <!-- Button Container - Fixed at bottom -->
    <LinearLayout
        android:id="@+id/buttonBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#E0E0E0"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="#00000000"/>

        <Button
            android:id="@+id/buttonSignUpForEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Sign Up"
            android:backgroundTint="#BB86FC"
            android:textColor="#000000" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
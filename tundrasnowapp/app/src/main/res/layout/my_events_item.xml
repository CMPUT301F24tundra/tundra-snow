<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Main Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Left Section with Icon -->
        <ImageView
            android:id="@+id/eventIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp" />

        <!-- Center Section with Event Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Event Date and Time -->
            <TextView
                android:id="@+id/eventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D3D3D3"
                android:textSize="11sp"
                android:text="September 15th, 2024, 9:30 AM - 1:00 PM" />

            <!-- Event Name -->
            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Networking Conference" />

            <!-- Event Location -->
            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D3D3D3"
                android:textSize="11sp"
                android:text="In-Person, Edmonton, Alberta" />
        </LinearLayout>

        <!-- Right Section with Status -->
        <TextView
            android:id="@+id/eventStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bottom Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#303030" /> <!-- Subtle dark gray for separation -->
</LinearLayout>
